<Window x:Class="Games_Week_Project_Noughts_And_Crosses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Games_Week_Project_Noughts_And_Crosses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="DarkSlateBlue"/>
        </Grid.Background>
        <TextBox x:Name="Title" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="25" Opacity="0.5" Text="Noughts and Crosses" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="40" />
        <TextBox x:Name="Player1Name" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Opacity="0.9" />
        <TextBox x:Name="Player2Name" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Opacity="0.9" />
        <Button x:Name="BeginGame" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Content="Begin Game" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Background="MidnightBlue" Foreground="White"/>
        <ListBox x:Name="Leaderboard" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="5" Opacity="0.9"/>
    </Grid>
</Window>
