<Window x:Class="lab_04_WPF_starter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_04_WPF_starter"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto" FontSize="27">
    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="Button01" Background="#081dd6" Grid.Row="0" Grid.Column="1" Content="Click Here" Click="Button01_Click"/>
        <ListBox x:Name="ListBox01" Background="#bfc4ef" Grid.Row="1" Grid.Column="3"  Grid.RowSpan="3" />
        <TextBox x:Name="TextBox01" Grid.Row="1" Grid.Column="0" />
        <ComboBox x:Name="ComboBox01" Grid.Row="2" Grid.Column="2" Background="#bfc4ef" />
    </Grid>
</Window>
